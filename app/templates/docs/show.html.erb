<% content_for :title, "#{page.title} &middot; #{doc.title} #{version}" %>

<h1>Doc: <%= doc.title %></h1>

<div data-testid="doc-versions">
  <% other_versions.each do |version| %>
    <a href="<%= doc.url_path(version) %>"><%= version %></a>
  <% end %>
</div>

<%= render "doc_pages/pages_nav", pages: doc.pages.nested %>

<h1>Page: <%= page.title %></h1>

<h2>TOC</h2>

<%= render "doc_pages/headings_toc", headings: page.nested_headings %>

<div class="content">
  <%= page.content_html %>
</div>
