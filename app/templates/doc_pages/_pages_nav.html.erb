<%= tag.ol("data-testid" => testid) do %>
  <% pages.each do |(page, child_pages)| %>
    <!-- prettier-ignore -->
    <% selected = page.title == current_page_title %>
    <li>
      <!-- prettier-ignore -->
      <% base_link_classes = "block py-1 text-gray-500 hover:underline hover:text-gray-800"
    selected_link_classes = "block py-1 font-bold text-primary" %>
      <a
        class="<%= selected ? selected_link_classes : base_link_classes %>"
        href="<%= page.url_path %>"
      >
        <%= page.title %>
      </a>
      <% if child_pages.any? %>
        <div class="border-rose-200 pl-3 ml-1 border-l-1">
          <%= render "doc_pages/pages_nav", pages: child_pages, testid: nil, current_page_title: "foo" %>
        </div>
      <% end %>
    </li>
  <% end %>
<% end %>
