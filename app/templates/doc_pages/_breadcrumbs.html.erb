<nav
  aria-label="Breadcrumb"
  class="
    font-mono text-xs font-semibold text-primary tracking-wider uppercase
    pt-3 lg:pt-0.5 mb-5 flex justify-between
  "
>
  <ol class="flex gap-2 items-center">
    <% breadcrumbs.each do |breadcrumb| %>
      <% list_classes = "hidden" if breadcrumb.root %>

      <li class="<%= list_classes %>">
        <% if breadcrumb.url %>
          <a class="hover:underline" href="<%= breadcrumb.url %>"><%= breadcrumb.label %></a>
        <% else %>
          <%= breadcrumb.label %>
        <% end %>
      </li>

      <% if breadcrumb != breadcrumbs.last %>
        <li class="<%= list_classes %>">
          <%= render "svgs/icons/arrow_right", width: 16, height: 16, class_name: "fill-current -mt-0.5" %>
        </li>
      <% end %>
    <% end %>
  </ol>

  <div class="flex gap-2 order-2 sticky top-3 self-start items-center -mt-0.5">
    <% if version %>
      <%= render "doc_pages/version_select",
                            id: "version-select-mobile",
                            testid: nil,
                            version: version,
                            other_versions: org_versions,
                            path_prefix: path_prefix,
                            anchor: "right" %>
    <% end %>
    <%= render "svgs/#{org}_logo", width: 28, height: 28 %>
  </div>
</nav>
