<header
  class="bg-primary sticky top-0 text-primary-reversed rounded-b-2xl z-30"
  data-defo-size-to-var="<%= { blockVarName: "--hk-nav-height" }.to_json %>"
>
  <div class="flex items-center gap-2 lg:gap-4 px-4 lg:px-6 py-2 justify-between">
    <div
      class="
        relative
        after:hidden after:md:block after:w-[2px] after:rounded-xs after:bg-(--hk-color-bg-primary-reversed) after:opacity-20
        after:top-0 after:bottom-0 after:absolute after:right-0
        md:pr-5 lg:pr-8
      "
    >
      <a
        class="
          flex gap-3 font-black text-xl antialiased tracking-tight
          lg:text-2xl items-center
        "
        href="/"
      >
        <%= render "svgs/hanakai_logo", height: 32, width: 32 %> Hanakai
      </a>
    </div>

    <%= render "header/nav_desktop", nav_items: nav_items %>

    <div class="flex gap-1">
      <div class="relative py-4" data-defo-static-search data-search-checksum="<%= checksum %>">
        <input
          type="search"
          placeholder="Search docs... (âŒ˜K)"
          class="px-4 py-2 border border-gray-300 rounded-lg w-64 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          data-static-search-input
          autocomplete="off"
        >

        <div
          class="absolute top-full right-0 mt-2 bg-white border border-gray-200 rounded-lg shadow-xl hidden max-h-[32rem] overflow-y-auto w-[600px] z-50"
          data-static-search-results
        ></div>

        <div
          class="fixed inset-0 hidden"
          data-static-search-overlay
          style="z-index: 40;"
        ></div>
      </div>

      <%= render "header/nav_mobile_button" %>
    </div>
  </div>
  <%= render "header/nav_mobile", nav_items: nav_items %>
</header>
