<% content_for :title, "Community" %>

<div class="lg:mt-8 lg:mb-14">
  <header class="mb-12">
    <h1 class="text-4xl font-black mb-4">Community</h1>
    <p class="text-lg text-gray-600">
      Meet the people building and maintaining Hanami, Dry, and ROM.
    </p>
  </header>

  <div class="space-y-16">
    <% if core_members.any? %>
      <section>
        <h2 class="text-3xl font-bold mb-6 text-gray-900">Core Team</h2>
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16"
          data-testid="core-team"
        >
          <% core_members.each do |member| %>
            <div
              class="
                team-member bg-white border border-gray-200 rounded-lg p-6
                shadow-sm hover:shadow-md transition-shadow duration-200
              "
            >
              <div class="flex items-start gap-4 mb-4">
                <img
                  alt="<%= member.name %>"
                  class="avatar w-20 h-20 rounded-full border-2 border-gray-200"
                  height="80"
                  src="https://avatars.githubusercontent.com/<%= member.github_user %>?size=80"
                  width="80"
                >
                <div class="flex-1 min-w-0">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1">
                    <%= member.name %>
                  </h3>

                  <p class="text-sm text-gray-600 mb-2"><%= member.status %></p>

                  <p class="text-sm text-gray-500">
                    <svg
                      class="inline w-4 h-4 mr-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <%= member.location %>
                  </p>
                </div>
              </div>

              <div class="flex flex-col gap-2 text-sm">
                <a
                  href="https://github.com/<%= member.github_user %>"
                  target="_blank"
                  rel="noopener"
                  class="
                    text-gray-700 hover:text-gray-900 inline-flex
                    items-center gap-2
                  "
                >
                  <svg
                    class="w-4 h-4 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    />
                  </svg>
                  @
                  <%= member.github_user %>
                </a>

                <% if member.url %>
                  <a
                    href="<%= member.url %>"
                    target="_blank"
                    rel="noopener"
                    class="
                      text-gray-700 hover:text-gray-900 inline-flex
                      items-center gap-2
                    "
                  >
                    <svg
                      class="w-4 h-4 flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                      />
                    </svg>
                    <%= member.url %>
                  </a>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>

