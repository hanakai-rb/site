<% content_for :title, "Community" %>

<h1>Community</h1>

<% if team_members.any? %>
  <h2>Team Members</h2>
  <div class="team-members">
    <% team_members.each do |member| %>
      <div class="team-member">
        <h3><%= member.name %></h3>
        <p class="location"><strong>Location:</strong> <%= member.location %></p>
        <p class="description"><%= member.description_html %></p>
        <p class="status"><%= member.status %></p>
      </div>
    <% end %>
  </div>
<% end %>
