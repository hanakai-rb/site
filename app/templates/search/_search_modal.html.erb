<div
  data-defo-pagefind-search="<%= {
    activateSelectors: ".search-activate-button", activeClassNames: ["active"], deactivateSelectors: ".search-close", pagefindUiSelector: "[data-pagefind-ui-owned]"
  }.to_json %>"
  class="
    bg-neutral fixed top-2 bottom-4 left-1 right-1 z-50 flex flex-col gap-2 rounded-2xl
    shadow-md opacity-0 pointer-events-none
    [&.active]:opacity-100 [&.active]:pointer-events-auto
  "
>
  <!-- Header -->
  <div class="">
    <button class="search-close">Close</button>
  </div>

  <!-- Pagefind search owned -->
  <div data-pagefind-ui-owned class="flex-1"></div>
</div>
