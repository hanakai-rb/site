{
  "name": "site",
  "private": true,
  "type": "module",
  "scripts": {
    "lint:all": "npm run lint:types && npm run lint:format && npm run lint:herb",
    "lint:herb": "npx --no-install herb-lint",
    "lint:format": "npx --no-install prettier . --check && npx --no-install herb-format app/templates --check",
    "lint:format:fix": "npx --no-install prettier . --write && npx --no-install herb-format app/templates",
    "lint:types": "tsc --noEmit --pretty",
    "test": "vitest"
  },
  "dependencies": {
    "@icelab/defo": "^1.0.1",
    "@tailwindcss/cli": "^4.1.11",
    "hanami-assets": "^2.2.1",
    "js.foresight": "^3.3.0",
    "lodash-es": "^4.17.21",
    "lunr": "^2.3.9",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@herb-tools/formatter": "^0.7.0",
    "@herb-tools/linter": "^0.7.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/lodash-es": "^4.17.12",
    "@types/lunr": "^2.3.7",
    "happy-dom": "^18.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
